{
    "user": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "username": {
            "type": "String",
            "required": true
        },
        "email": {
            "type": "String",
            "required": true
        },
        "roles": {
            "type": [
                "Schema.ObjectId"
            ],
            "ref": "role"
        }
    },
    "role": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "name": {
            "type": "String",
            "required": true,
            "enum": [
                "user",
                "admin"
            ]
        }
    },
    "Emprendedor": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "nombre": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "rut": {
            "type": "String",
            "required": true
        },
        "celular": {
            "type": "Number",
            "required": true,
            "minLength": 9,
            "maxLength": 15
        },
        "idCarrera": {
            "type": [
                "Schema.ObjectId"
            ],
            "ref": "Carrera"
        },
        "nombre_puesto": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "idProductos": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "minItems": 1,
            "maxItems": 10,
            "ref": "Productos"
        },
        "idAyudantes": {
            "type": [
                "Schema.ObjectId"
            ],
            "minItems": 0,
            "maxItems": 3,
            "ref": "Ayudantes"
        }
    },
    "Carrera": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "titulo": {
            "type": "String",
            "required": true,
            "maxLength": 100
        }
    },
    "Inscripcion": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "userId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "user"
        },
        "emprendedorId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "Emprendedor"
        },
        "estado": {
            "type": "String",
            "required": true,
            "enum": [
                "Sin inscribir",
                "Pendiente",
                "Rechazado",
                "Arobado"
            ]
        },
        "fechaInscripcion": {
            "type": "Date",
            "default": "Date.now()"
        }
    },
    "Productos": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "nombre": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "fotografia": {
            "type": "String",
            "required": true
        },
        "descripcion": {
            "type": "String",
            "required": true,
            "maxLength": 255
        },
        "stock": {
            "type": "Number",
            "required": true,
            "min": 1,
            "max": 300
        }
    },
    "Ayudantes": {
        "id_": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "nombre": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "rut": {
            "type": "String",
            "required": true
        }
    }
}