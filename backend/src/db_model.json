{
    "user": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "username": {
            "type": "String",
            "required": true
        },
        "email": {
            "type": "String",
            "required": true
        },
        "roles": {
            "type": [
                "Schema.ObjectId"
            ],
            "ref": "role"
        }
    },
    "role": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "name": {
            "type": "String",
            "required": true,
            "enum": [
                "user",
                "admin",
                "encargado"
            ]
        }
    },
    "Emprendedor": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "userId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "user"
        },
        "nombre_completo": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "rut": {
            "type": "String",
            "required": true
        },
        "celular": {
            "type": "String",
            "required": true,
            "minLength": 9,
            "maxLength": 15
        },
        "carreraId": {
            "type": [
                "Schema.ObjectId"
            ],
            "ref": "Carrera"
        },
        "nombre_puesto": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "productosId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "minItems": 1,
            "maxItems": 10,
            "ref": "Productos"
        },
        "ayudantesId": {
            "type": [
                "Schema.ObjectId"
            ],
            "minItems": 0,
            "maxItems": 3,
            "ref": "Ayudantes"
        }
    },
    "Carrera": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "titulo": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "facultad": {
            "type": "String",
            "required": true,
            "enum": [
                "Arquitectura, Construccion y Diseño",
                "Ingeniería",
                "Ciencias Empresariales",
                "Educación y Humanidades",
                "Ciencias de la Salud y de los Alimentos",
                "Ciencias"
            ]
        }
  
    },
    "Inscripcion": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "userId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "user"
        },
        "EmprendedorId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "Emprendedor"
        },
        "productosId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "minItems": 1,
            "maxItems": 10,
            "ref": "Productos"
        },
        "ayudantesId": {
            "type": [
                "Schema.ObjectId"
            ],
            "minItems": 0,
            "maxItems": 3,
            "ref": "Ayudantes"
        },
        "estado": {
            "type": "String",
            "required": true,
            "enum": [
                "Sin inscribir",
                "Pendiente",
                "Rechazado",
                "Arobado"
            ]
        },
        "fechaInscripcion": {
            "type": "Date",
            "default": "Date.now()"
        }
    },
    "Productos": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "nombre": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "categoria": {
            "type": "String",
            "required": true,
           "maxLength": 255
        },
        "fotografia": {
            "type": "String",
            "required": true
        },
        "descripcion": {
            "type": "String",
            "required": true,
            "maxLength": 255
        },
        "stock": {
            "type": "Number",
            "required": true,
            "min": 1,
            "max": 300
        },
        "emprendedorId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "Emprendedor"
        }
    },
    "Ayudantes": {
        "_id": {
            "type": "Schema.ObjectId",
            "required": true
        },
        "nombre": {
            "type": "String",
            "required": true,
            "maxLength": 100
        },
        "rut": {
            "type": "String",
            "required": true
        },
        "emprendedorId": {
            "type": [
                "Schema.ObjectId"
            ],
            "required": true,
            "ref": "Emprendedor"
        }
    },
    "Actividad": {
        "_id": {
          "type": "Schema.ObjectId",
          "required": true
        },
        "emprendedorId": {
          "type": "Schema.ObjectId",
          "required": true,
          "ref": "Emprendedor"
        },
        "productosId": {
          "type": "Schema.ObjectId", 
          "required": true,
          "ref": "Productos"
        },
        "categoria": {
          "type": "String",
          "required": true,
          "enum": [
            "Reunión",
            "Taller", 
            "Evento",
            "Otro"
          ]
        },
        "nombre": {
          "type": "String",
          "required": true,
          "maxLength": 100
        },
        "descripcion": {
          "type": "String",
          "required": true,
          "maxLength": 255
        },
        "fechaInicio": {
          "type": "Date",
          "required": true
        },
        "fechaFin": {
          "type": "Date",
          "required": true
        },
        "horaInicio": {
          "type": "Date",
          "required": true
        },
        "horaFin": {
          "type": "Date",
          "required": true
        },
        "lugar": {
          "type": "String",
          "required": true
        },
        "capacidadAsistentes": {
          "type": "Number",
          "required": true
        }
      }
      
      
}


